@model DesapegAutoWeb.Models.VeiculoViewModel

@{
    ViewData["Title"] = "Editar Anúncio";
}

@* Adicionando o CSS específico para esta página *@
<link rel="stylesheet" href="~/css/anuncio.css" asp-append-version="true" />

<div class="container-anuncio">
    <h2 class="page-title">Editar Anúncio</h2>

    <form asp-action="Edit" class="edit-form">
        @* Este campo é crucial para identificar qual veículo está sendo editado *@
        <input type="hidden" asp-for="Id" />

        <!-- Preço -->
        <div class="form-group">
            <label asp-for="Preco" class="form-label"></label>
            <input asp-for="Preco" class="form-input" />
            <span asp-validation-for="Preco" class="text-danger"></span>
        </div>

        <!-- Quilometragem -->
        <div class="form-group">
            <label asp-for="Quilometragem" class="form-label"></label>
            <input asp-for="Quilometragem" class="form-input" />
            <span asp-validation-for="Quilometragem" class="text-danger"></span>
        </div>

        <!-- Fotos (Estrutura Visual) -->
        <div class="form-group">
            <label class="form-label">Fotos</label>
            <div class="photos-grid">
                <!-- A lógica de upload de fotos será adicionada depois -->
                <div class="photo-slot filled">
                    <img src="https://placehold.co/200x150/e0e0e0/666?text=Carro" alt="Foto do veículo" class="photo-image">
                    <button type="button" class="remove-photo-btn" aria-label="Remover foto">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><line x1="18" y1="6" x2="6" y2="18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" /><line x1="6" y1="6" x2="18" y2="18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" /></svg>
                    </button>
                </div>
                <div class="photo-slot empty"><div class="photo-placeholder"><svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><rect x="3" y="3" width="18" height="18" rx="2" ry="2" stroke="currentColor" stroke-width="2" /><circle cx="8.5" cy="8.5" r="1.5" stroke="currentColor" stroke-width="2" /><path d="M21 15l-5-5L5 21" stroke="currentColor" stroke-width="2" /></svg></div></div>
                <div class="photo-slot empty"><div class="photo-placeholder"><svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><rect x="3" y="3" width="18" height="18" rx="2" ry="2" stroke="currentColor" stroke-width="2" /><circle cx="8.5" cy="8.5" r="1.5" stroke="currentColor" stroke-width="2" /><path d="M21 15l-5-5L5 21" stroke="currentColor" stroke-width="2" /></svg></div></div>
                <div class="photo-slot add-photo">
                    <button type="button" class="add-photo-btn" aria-label="Adicionar foto">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><line x1="12" y1="5" x2="12" y2="19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" /><line x1="5" y1="12" x2="19" y2="12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" /></svg>
                        <span>Adicionar foto</span>
                    </button>
                </div>
            </div>
        </div>

        <!-- Botões de ação -->
        <div class="form-actions">
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Excluir anúncio</a>
            <div class="form-actions-right">
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                <button type="submit" class="btn btn-primary">Salvar alterações</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @* Adicionando o JavaScript específico para esta página *@
    <script src="~/js/anuncio.js" asp-append-version="true"></script>
}
